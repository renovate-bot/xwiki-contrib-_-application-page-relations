#macro (panel $title $items $localize)
  (% class="panel panel-default" %)(((
    (% class="panel-heading text-center"%)(((
      $services.localization.render($title)
    )))
    (% class="panel-body" %)(((
      #foreach ($item in $items)
        #if ($localize)
          * [[$services.localization.render($item[0])&gt;&gt;$item[1]]]
        #else
          * [[$item[0]&gt;&gt;$item[1]]]
        #end
      #end
    )))
  )))
#end

#macro (list $entries)
  #set ($list = [])
  #foreach ($entry in $entries)
    #set ($page = $xwiki.getDocument($reference).translatedDocument)
    #set ($discard = $list.add([$page.title, $entry]))
  #end
#end

(% style="background-color: #f5f5f5; padding: 1.6em; margin-bottom: 1.5em;" %)(((
$services.localization.render('ring.about')
)))

(% class="row" %)(((
  (% class="col-md-4 col-xs-12" %)(((
    #panel('ring.quick-links', [['ring.documentation', 'Documentation'], ['ring.demo', 'WikidataImporter'], ['ring.search', 'Search'], ['ring.administration', 'SolrConsole'] ], true)
  )))
  (% class="col-md-4 col-xs-12" %)(((
    #list($services.ring.getTypes())
    #panel('ring.types', $list, false)
  )))
  (% class="col-md-4 col-xs-12" %)(((
    #list($services.ring.getRelations())
    #panel('ring.relations', $list, false)
  )))
)))
{{/velocity}}

