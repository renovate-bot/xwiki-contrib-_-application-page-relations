    <property>
      <code>.facets ul {
  display: inline;
  padding-left: 0px;
}

.facets ul li {
  display: inline;
}
.facets ul li a {
  display: inline;
  text-decoration: none;
}

.page-relations {
  margin-bottom: 1em;
}

.page-relations ul {
  display: inline;
  list-style-type: none;
  margin-left: 0;
  padding-left: 0px;
}

.page-relations ul li {
  display: inline-block;
}

.page-relations ul li a {
  display: inline;
  text-decoration: none;
}

.page-relation {
  background-color: #D0DFEE;
  -moz-transition: all .1s linear 0s;
  border: 1px solid transparent;
  border-radius: 5px 5px 5px 5px;
  display: inline;
  padding: 1px 4px 2px;
  position: relative;
  margin-top: 4px;
  font-size: 1em;
}

.page-relation-wrapper {
  /*white-space: pre;*/
  line-height: 1.8em;
}

.page-relation-wrapper .separator {
    display: none;
}

a.page-relation-delete, a.page-relation-delete:visited {
  color: #FFFFFF;
  font-size: 70%;
  font-weight: bold;
  text-decoration: none!important;
  vertical-align: super;
  margin-left: 1px;
}

.page-relation-wrapper:hover a.page-relation-delete {
  color: #656565;
}

.page-relation-wrapper a.page-relation-delete:hover {
  color: #e51c23;
}

.page-relation-add a, .page-relation-add a:visited {
  color: #656565;
  font-size: 80%;
  text-decoration: none;
}

.page-relation-add-form {
  border: 1px outset #E8E8E8;
  position: absolute;
  z-index: 1000;
  margin-top: 0.5em;
}

.page-relation-add-form div {
  background: #F3F3F3;
  overflow: hidden;
  padding: 4px 8px;
}

.page-relation-add-form label {
  color: #656565;
  font-size: 80%;
  margin: 2px 0;
}

.page-relation-add-form .button {
  font-size: 80%;
  padding: 3px 5px!important;
  cursor: pointer;
  display: inline-block;
  min-height: 0!important;
}

/* Style the suggestions for the page relations */

.suggestItems .xitem div.page-relation-suggestitem span.hint {
  display: block;
  margin-left: 0;
  font-size: 90%;
}
